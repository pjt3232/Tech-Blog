<div class="container">
    <h1>Create New Blog Post</h1>
    <form method="POST" action="/dashboard/new">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" required="true">
        </div>
        <div class="mb-3">
            <label for="contents" class="form-label">Content</label>
            <textarea class="form-control" id="contents" name="contents" required="true"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
    </form>
    <a href="/dashboard" class="btn btn-secondary">Cancel</a>
</div>