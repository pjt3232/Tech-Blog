{{#extends "main"}}

{{#contentFor "title"}}Dashboard{{/contentFor}}
{{#contentFor "content"}}
<div class="container">
    <h2>Your Posts</h2>
    {{#if userPosts}}
    <ul class="list-group">
        {{#each userPosts}}
        <li class="list-group-item">
            <div class="d-flex justify-content-between">
                <h5>{{title}}</h5>
                <div>
                    <a href="/edit/{{id}}" class="btn btn-primary">Edit</a>
                    <a href="/delete/{{id}}" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p>No posts found.</p>
    {{/if}}

    <h3>Create a New Post</h3>
    <form method="POST" action="/post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" required="true">
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" id="content" name="content" rows="5" required="true"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
    </form>
</div>
{{/contentFor}}
{{/extend}}
