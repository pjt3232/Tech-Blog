<div class="row align-center mb-5">
    <h2 class="fs-1 col-md-6">My Posts</h2>
    {{#each posts}}
    <div class="card text-bg-primary p-3 col-md-6">
        <h3 class="card-title">{{this.title}}</h3>
        <p class="card-text">{{this.content}}</p>
        <a class="link-success" href="/posts/{{this.id}}">View</a> | 
        <a class="link-success" href="/posts/{{this.id}}/edit">Edit</a> |
        <a class="link-success" href="/posts/{{this.id}}/delete">Delete</a>
    </div>
    {{/each}}
    <div class="col-md-6">
        <a class="link-body-emphasis" href="/dashboard/add">Add New Post</a>
        <a class="link-body-emphasis" href="/">Home</a>
        <a class="link-body-emphasis" href="/logout">Logout</a>
    </div> 
</div>  