<div class="container">
    <h1>Edit Blog Post</h1>
    <form method="POST" action="/dashboard/edit/{{post.id}}">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="{{post.title}}" required="true">
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" id="contents" name="contents" required="true">
                {{post.contents}}
            </textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update Post</button>
    </form>
    <a href="/dashboard" class="btn btn-secondary">Cancel</a>
</div>