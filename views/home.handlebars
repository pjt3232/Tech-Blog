<div class="row align-center mb-5">
    <div class="card text-bg-primary p-3 col-md-6">
        {{#each posts}}
            <h2 class="card-title">{{this.title}}</h2>
            <p class="card-text">{{this.content}}</p>
        {{/each}}
    <a class="link-success" href="/dashboard">Dashboard</a>
    </div>  
    <div class="col-md-6">
        {{#if authenticated}}
            <a class="link-body-emphasis" href="/logout">Logout</a>
        {{else}}
            <a class="link-body-emphasis" href="/login">Login</a> | <a href="/signup">Signup</a>
        {{/if}}
    </div>
</div>  